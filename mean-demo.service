[Unit]
Description=Argusoft Recruitment Server

[Service]
ExecStart=/usr/bin/node /home/honey/honey/Mean/mean-demo/backend/Server/index.js

Restart=always
 # Restart service after 10 seconds if node service crashes
 RestartSec=10
 # Output to syslog
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=argusoft-recruitment
#User=<alternate user>
#Group=<alternate group>
Environment=NODE_ENV=development

[Install]
WantedBy=multi-user.target
